foo = 5
result = [foo]

{
  # overwrite existing variable
  foo = 6

  # instantiate new variable
  bar = 7

  # "mutate" existing variable
  result = push(result, bar)

  # nested blocks
  {
    bar = 8

    # undefined variable
    result = push(result, baz)
  }
}

# variable only exists in inner scope
result = push(result, bar)

# variable is overwritten in inner scope
push(result, foo)
